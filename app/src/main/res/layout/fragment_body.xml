<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark">

    <carbon.widget.LinearLayout
        android:id="@+id/bodyTypeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <carbon.widget.Button
            android:id="@+id/btnNone"
            android:text="none"
            style="@style/BodyTypeButton"/>

        <carbon.widget.Button
            android:id="@+id/btnRaw"
            android:text="raw"
            style="@style/BodyTypeButton"/>

        <carbon.widget.Button
            android:id="@+id/btnForm"
            android:text="form-data"
            style="@style/BodyTypeButton"/>

    </carbon.widget.LinearLayout>


    <carbon.widget.EditText
        android:id="@+id/etRawBody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bodyTypeContainer"
        android:hint="Enter raw JSON"
        android:gravity="top"
        android:padding="12dp"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_secondary"
        android:visibility="gone"
        app:carbon_cornerRadius="8dp"
        android:background="#11151C"
        android:inputType="textMultiLine"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFormData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bodyTypeContainer"
        android:visibility="gone"/>

    <carbon.widget.ImageView
        android:id="@+id/fabAddForm"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:carbon_tint="@color/carbon_orange_500"
        android:src="@drawable/ic_add" />

</carbon.widget.RelativeLayout>
