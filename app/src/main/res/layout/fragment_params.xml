<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F1115">

    <Switch
        android:id="@+id/switchEnableParams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Params"
        android:textColor="@color/white"
        android:layout_margin="16dp"
        android:buttonTint="@color/carbon_orange_500"
        android:checked="true" />

    <carbon.widget.LinearLayout
        android:id="@+id/headerRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/switchEnableParams"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:padding="8dp"
        app:carbon_cornerRadius="6dp"
        android:background="#161A20">

        <carbon.widget.TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="KEY"
            android:textColor="#9AA0A6"
            android:textSize="12sp" />

        <carbon.widget.TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="VALUE"
            android:textColor="#9AA0A6"
            android:textSize="12sp" />

        <carbon.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TYPE"
            android:textColor="#9AA0A6"
            android:textSize="12sp" />
    </carbon.widget.LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvParams"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerRow"
        android:layout_marginTop="4dp"
        android:paddingBottom="80dp"
        android:clipToPadding="false" />

    <carbon.widget.ImageView
        android:id="@+id/fabAddParam"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        app:carbon_tint="@color/carbon_orange_500"
        android:src="@drawable/ic_add" />

</carbon.widget.RelativeLayout>
